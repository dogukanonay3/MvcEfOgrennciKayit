
@{
}
@model List<Ders>
<div class="text-end">
    <a href="/Ders/Ekle" class="btn btn-primary">Ekle</a>
</div>

<div class="card mt-3">
    <div class="card-header">
        Kurslar
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>Ders Adı</th>
                <th>Ders Id</th>
            </tr>
            @foreach (var Ders in Model)
            {
                <tr>
                    <td>@Ders.Adi</td>
                    <td>@Ders.Id</td>
                    <td>
                        <b><a href="/Ders/Detay/@Ders.Id" class="btn btn-outline-success">Detay</a></b>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
